root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.cpp]
indent_size = 4
indent_style = space

[*.h]
indent_size = 4
indent_style = space

[*.java]
indent_size = 4
indent_style = space

[*.sh]
indent_size = 2
indent_style = space

[*.mk]
indent_size = 4
indent_style = space

[*.xml]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false
